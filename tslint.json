{
    "extends": "tslint:recommended",
    "rules": {
        "no-any": true,
        "ban-types": [
            true,
            [
                "Object",
                "Avoid using the `Object` type. Did you mean `object`?"
            ],
            [
                "Boolean",
                "Avoid using the `Boolean` type. Did you mean `boolean`?"
            ],
            [
                "Number",
                "Avoid using the `Number` type. Did you mean `number`?"
            ],
            [
                "String",
                "Avoid using the `String` type. Did you mean `string`?"
            ]
        ],
        "interface-name": [
            false
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "array-type": [
            true,
            "array"
        ],
        "max-line-length": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "ordered-imports": [
            true
        ],
        "object-literal-sort-keys": [
            true,
            "match-declaration-order"
        ],
        "no-shadowed-variable": [
            false
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "asyncArrow": "always",
                "constructor": "never",
                "method": "never",
                "named": "never"
            }
        ],
        "no-console": [
            true
        ],
        "no-unnecessary-initializer": [
            false
        ],
        "member-access": [
            true
        ],
        "member-ordering": [
            false
        ],
        "linebreak-style": [
            true,
            "LF"
        ]
    }
}